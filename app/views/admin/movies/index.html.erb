<%= flash[:notice] %></br>
<%= link_to '登録フォーム', '/admin/movies/new' %>

<% @movies.each do |movie| %>
  <div>
    <table>
      <thead>
      <tr>
        <th>ID</th>
        <th>タイトル</th>
        <th>公開年</th>
        <th>概要</th>
        <th>画像URL</th>
        <th>上映中</th>
        <th>登録日時</th>
        <th>更新日時</th>
      </tr>
      </thead>
      <tbody>

      </tbody>
      <tr>
        <td><%= movie.id %></td>
        <td><%= movie.name %></td>
        <td><%= movie.year %></td>
        <td><%= movie.description %></td>
        <td><a href="<%= movie.image_url %>">画像</a></td>
        <td><%= image_tag movie.image_url %></td>
        <td><%= movie.is_showing ? '上映中' : '上映予定' %></td>
        <td><%= movie.created_at %></td>
        <td><%= movie.updated_at %></td>
        <td><%= link_to '編集', edit_admin_movie_path(movie.id) %></td>
        <td><%= link_to '削除', admin_movie_path(movie.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
      </tr>
    </table>
  </div>
<% end %>
